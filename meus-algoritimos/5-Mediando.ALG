algoritmo "mediando"
var
   n1, n2:inteiro
   M:real
inicio
   escreval("Vamos Somar!")
   escreva("Digite um numero: ")
   leia(n1)
   escreva("Digite outro numero: ")
   leia(n2)
   M <- (n1 + n2)/2
   escreval("O resultado da mediaçao de ", n1, " + ", n2, " /2"," e igual a ", M, "!")
fimalgoritmo